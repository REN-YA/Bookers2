<div class=" container px-5 px-sm-0">
  <div class="row">

  <%= render 'users/user',user:@user %>

          <h2 class="mt-3">New book</h2>
            <%= form_with model: @book, url: books_path, local:true do |f| %>

            <h4>Title</h4>
            <%= f.text_field :title %>
            <h4>Opinion</h4>
            <%= f.text_area :body %>
            <br>
            <%= f.submit 'Create Book',class: "btn btn-success" %>
            <% end %>
      </div>

    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
    <tbody>
      <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to attachment_image_tag(book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg",size: "50x50"),user_path(book.user) %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
  </div>
 </div>

