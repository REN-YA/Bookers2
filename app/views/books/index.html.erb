<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <h1>User info</h1>
<%= form_with model: @book, url:'/books', local:true do |f| %>

<h4>Name</h4>
<%= f.text_field :title %>
<h4>Introduction</h4>
<%= f.text_area :body %>
<br>
<%= f.submit 'Update User' %>
<% end %>


<h1>New book</h1>
<%= form_with model: @book, url:'/books', local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<br>
<%= f.submit 'Create Book' %>
<% end %>
    </div>
    <div class="col-lg-8">

<h1>Books</h1>
  <table class="table table-striped">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.user_id %></td>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
      </tr>
      
      <% end %>
    </tbody>
  </table>
  </div>
  </div>
</div>

