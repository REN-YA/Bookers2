<div class="container">
  <div class="row">
        <div class="col-lg-3">
    
    <h1>User info</h1>
    <table class="table">
    <tr>
       <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg",size: "50x50" %></td>
    </tr>
    <tr>
       <th>name</th>
       <td><%= @user.name %></td>
    </tr>
    <tr>
       <th>Introduction</th>
       <td><%= @user.introduction %></td>
    </tr>
    </table>
    <br>
    <%= link_to edit_user_path(@user),class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
    
    
    <h1>New book</h1>
    <%= form_with model: @book, url: books_path, local:true do |f| %>
    
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Create Book',class: "btn btn-success" %>
    <% end %>
        </div>
        <div class="col-lg-9">

<h1>Books</h1>
  <table class="table table-striped">
     <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
         <% @books.each do |book| %>
    <tr>
      <td></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>

      <td>
         <%= link_to 'edit', edit_book_path(book), class: "btn btn-success" %>
       </td>
      <td>
         <%= link_to 'Destroy', book_path(book), method: :delete, class: "btn btn-danger" %>
      </td>

    </tr>
    <% end %>
    </tbody>
  </table>
  </div>
  </div>
</div>

