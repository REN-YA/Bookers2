<div class="container">
  <div class="row">


           <%= render 'users/user',user:@user %>

    <h2>New book</h2>
    <%= form_with model: @book_new, url: books_path, local:true do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Create Book',class: "btn btn-success" %>
    <% end %>
        </div>
        <div class="col-lg-9">

<h1>Book detail</h1>
  <table class="table table-striped">

    <tbody>
    <tr>
      <td><%= link_to attachment_image_tag(@book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg",size: "50x50"),user_path(@book.user) %>
      <br>
          <%= link_to @user.name, user_path(@user.id) %>
      </td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>

       <% if @user.id == current_user.id %>
       <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
          <td>
             <%= link_to 'edit', edit_book_path(@book), class: "btn btn-success" %>
           </td>
          <td>
             <%= link_to 'Destroy', book_path(@book), method: :delete, class: "btn btn-danger" %>
          </td>
        <% end %>
    </tr>
    </tbody>
  </table>
  </div>
  </div>
</div>