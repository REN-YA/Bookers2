<div class="container">
  <div class="row">
      
      <div class="col-lg-3">
      <h1>User info</h1>
     <table class="table">
        <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg",size: "50x50" %></td>
        </tr>
        <tr>
       <th>name</th>
        <td><%= @user.name %></td>
        </tr>
        <tr>
       <th>Introduction</th>
       <td><%= @user.introduction %></td>
      </table>
        <br>
        <div class="row">
        <%= link_to edit_user_path(@user),class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
        </div>


      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, url: books_path, local:true do |f| %>
        
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <br>
        <%= f.submit 'Create Book',class: "btn btn-success" %>
        <% end %>
      </div>  
            
    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
        <tbody></tbody>
      </table>
      </div>
      
  </div>
</div>